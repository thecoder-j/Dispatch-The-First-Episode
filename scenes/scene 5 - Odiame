    if (choice == 1) {
        cout << "You punt Toxic across the street.\n";
    } else {
        cout << "You end the fight with brutal force.\n";
    }

    if (isMerciful) {
        cout << "Your restraint still shows beneath the violence.\n";
    } else {
        cout << "You fight with cold efficiency.\n";
    }
}
