// SCENE 2: APARTMENT INTERROGATION
// =================================================
void scene_apartment_interrogation() {
    int choice;

    cout << "\n========== SCENE 2: APARTMENT INTERROGATION ==========\n\n";

    cout << "Robert: Yeah. Thanks for reminding me.\n";
    cout << "Robert: So here's what's going to happen.\n\n";

    cout << "Robert: I'm going to hang you off the side of this building.\n";
    cout << "Robert: You're going to tell me where Shroud is.\n";
    cout << "Robert: Or I'm going to drop you.\n\n";

    cout << "Soothing Goon: Come on. I thought we were having a breakthrough.\n";
    cout << "Robert: For being a real piece of shit, you're pretty easy to talk to.\n";
    cout << "Robert: But I only need one thing. Shroud's location.\n\n";

    cout << "Soothing Goon: I'm not telling you SHIT!\n";
    cout << "Robert: See? This is more like what I expected.\n\n";

    cout << "*Chair scrapes across the floor*\n";
    cout << "Soothing Goon: I hope Shroud kills you like he killed your father!\n\n";

    cout << "*Wind howls*\n";
    cout << "Robert: Windy up here tonight.\n";
    cout << "Soothing Goon: Why are we outside?\n";
    cout << "Robert: No telling where you land.\n\n";

    cout << "Soothing Goon: WAIT! WAIT! STEEL MILL!\n";
    cout << "Soothing Goon: Llewelyn Steel Works!\n\n";

    cout << "CHOICES:\n";
    cout << "1. LET HIM DROP\n";
    cout << "2. PULL HIM BACK\n";
    cout << "Choice: ";
    cin >> choice;

    if (choice == 2) {
        isMerciful = true;
        cout << "\nRobert: Honestly, it was nice talking to someone about this stuff.\n";
        cout << "Robert: I'm really glad I kidnapped you tonight.\n";
    } else {
        isMerciful = false;
        cout << "\n*Silence follows as the screaming fades*\n";
    }
    cout << "\n===== End of Scene 2 =====\n";
}

