// SCENE 3: STREET FIGHT
// =================================================
void scene_street_fight() {
    int choice;

    cout << "\n========== SCENE 3: STREET FIGHT ==========\n\n";
    cout << "You see a masked thief holding a crowbar, blocking your path.\n";
    cout << "This fight is immediate and tactical.\n\n";

    cout << "CHOICES:\n";
    cout << "1. Right Hand Punch\n";
    cout << "2. Left Hand Punch\n";
    cout << "Choice: ";
    cin >> choice;

    if (choice == 1) {
        cout << "\nYou swing with your right hand.\n";
        cout << "The thief reads it perfectly and counters with the crowbar!\n";
        cout << "*You get struck and stagger backward.*\n";
        cout << "Outcome: You were countered and injured.\n";
    }
    else if (choice == 2) {
        cout << "\nYou swing with your left hand.\n";
        cout << "Your punch lands perfectly and knocks out the attacker!\n";
        cout << "Outcome: Tactical success â€” enemy down.\n";
    }
    else {
        cout << "\nInvalid choice â€” no attack made.\n";
        cout << "The thug stays aggressive.\n";
    }

    cout << "\n===== End of Scene 3 =====\n";
}

