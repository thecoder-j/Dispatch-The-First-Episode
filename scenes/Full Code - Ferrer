// =================================================
// SCENE 1: INTRODUCTION
// =================================================
void scene_introduction() {
    int choice;

    cout << "\n========== SCENE 1: INTRODUCTION ==========\n\n";

    cout << "Robert: Obviously.\n";
    cout << "Robert: I love him, he's my dad.\n";
    cout << "Goon: Hmm...\n";
    cout << "Robert: What does that \"Hmm\" mean? Just say what you want to say.\n";
    cout << "Goon: It's just when you add 'obviously' it feels a little less obvious.\n";
    cout << "Goon: So I'll ask again: how do you really feel about your father?\n\n";

    cout << "CHOICES:\n";
    cout << "1. Didn't know him well\n";
    cout << "2. I love my dad\n";
    cout << "3. He's gone\n";
    cout << "Choice: ";
    cin >> choice;

    cout << "\nGoon: It's as if maybe it's a little more complicated than you feel comfortable admitting,\n";
    cout << "Goon: which is completely understandable.\n\n";

    if (choice == 2) {
        cout << "Robert: Look, I love my dad, all right? I love my dad. That's the truth.\n";
        cout << "Goon: Loved.\n";
        cout << "Robert: That's what I said.\n";
        cout << "Goon: You said 'love.' Your dad's dead.\n";
        cout << "Robert: Just so sensitive.\n";
        cout << "Robert: If I didn't love him, we wouldn't be here.\n";
        cout << "Robert: Why would I be trying to find the man who killed him?\n";
        cout << "Robert: My nose is bleeding. Thought I was getting emotionally snotty.\n";
        cout << "Soothing Goon: No, it's probably from when I kicked you in the face.\n";
    } else if (choice == 1) {
        cout << "Robert: I didn't really know him that well.\n";
        cout << "Goon: That kind of loss sticks around anyway.\n";
    } else {
        cout << "Robert: He's gone.\n";
        cout << "Goon: And you're still standing here because of it.\n";
    }
    cout << "\n===== End of Scene 1 =====\n";
}

