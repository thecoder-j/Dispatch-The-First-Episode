// =================================================
// SCENE 1: INTRODUCTION
// =================================================
void scene_introduction() {
    int choice;

    cout << "\n========== SCENE 1: INTRODUCTION ==========\n\n";

    cout << "Robert: Obviously.\n";
    cout << "Robert: I love him, he's my dad.\n";
    cout << "Goon: Hmm...\n";
    cout << "Robert: What does that \"Hmm\" mean? Just say what you want to say.\n";
    cout << "Goon: It's just when you add 'obviously' it feels a little less obvious.\n";
    cout << "Goon: So I'll ask again: how do you really feel about your father?\n\n";

    cout << "CHOICES:\n";
    cout << "1. Didn't know him well\n";
    cout << "2. I love my dad\n";
    cout << "3. He's gone\n";
    cout << "Choice: ";
    cin >> choice;

    cout << "\nGoon: It's as if maybe it's a little more complicated than you feel comfortable admitting,\n";
    cout << "Goon: which is completely understandable.\n\n";

    if (choice == 2) {
        cout << "Robert: Look, I love my dad, all right? I love my dad. That's the truth.\n";
        cout << "Goon: Loved.\n";
        cout << "Robert: That's what I said.\n";
        cout << "Goon: You said 'love.' Your dad's dead.\n";
        cout << "Robert: Just so sensitive.\n";
        cout << "Robert: If I didn't love him, we wouldn't be here.\n";
        cout << "Robert: Why would I be trying to find the man who killed him?\n";
        cout << "Robert: My nose is bleeding. Thought I was getting emotionally snotty.\n";
        cout << "Soothing Goon: No, it's probably from when I kicked you in the face.\n";
    } else if (choice == 1) {
        cout << "Robert: I didn't really know him that well.\n";
        cout << "Goon: That kind of loss sticks around anyway.\n";
    } else {
        cout << "Robert: He's gone.\n";
        cout << "Goon: And you're still standing here because of it.\n";
    }
}

// =================================================
// SCENE 2: APARTMENT INTERROGATION
// =================================================
void scene_apartment_interrogation() {
    int choice;

    cout << "\n========== SCENE 2: APARTMENT INTERROGATION ==========\n\n";

    cout << "Robert: Yeah. Thanks for reminding me.\n";
    cout << "Robert: So here's what's going to happen.\n\n";

    cout << "Robert: I'm going to hang you off the side of this building.\n";
    cout << "Robert: You're going to tell me where Shroud is.\n";
    cout << "Robert: Or I'm going to drop you.\n\n";

    cout << "Soothing Goon: Come on. I thought we were having a breakthrough.\n";
    cout << "Robert: For being a real piece of shit, you're pretty easy to talk to.\n";
    cout << "Robert: But I only need one thing. Shroud's location.\n\n";

    cout << "Soothing Goon: I'm not telling you SHIT!\n";
    cout << "Robert: See? This is more like what I expected.\n\n";

    cout << "*Chair scrapes across the floor*\n";
    cout << "Soothing Goon: I hope Shroud kills you like he killed your father!\n\n";

    cout << "*Wind howls*\n";
    cout << "Robert: Windy up here tonight.\n";
    cout << "Soothing Goon: Why are we outside?\n";
    cout << "Robert: No telling where you land.\n\n";

    cout << "Soothing Goon: WAIT! WAIT! STEEL MILL!\n";
    cout << "Soothing Goon: Llewelyn Steel Works!\n\n";

    cout << "CHOICES:\n";
    cout << "1. LET HIM DROP\n";
    cout << "2. PULL HIM BACK\n";
    cout << "Choice: ";
    cin >> choice;

    if (choice == 2) {
        isMerciful = true;
        cout << "\nRobert: Honestly, it was nice talking to someone about this stuff.\n";
        cout << "Robert: I'm really glad I kidnapped you tonight.\n";
    } else {
        isMerciful = false;
        cout << "\n*Silence follows as the screaming fades*\n";
    }
}

// =================================================
// SCENE 3: STREET FIGHT
// =================================================
void scene_street_fight() {
    int choice;

    cout << "\n========== SCENE 3: STREET FIGHT ==========\n\n";
    cout << "You see a masked thief holding a crowbar, blocking your path.\n";
    cout << "This fight is immediate and tactical.\n\n";

    cout << "CHOICES:\n";
    cout << "1. Right Hand Punch\n";
    cout << "2. Left Hand Punch\n";
    cout << "Choice: ";
    cin >> choice;

    if (choice == 1) {
        cout << "\nYou swing with your right hand.\n";
        cout << "The thief reads it perfectly and counters with the crowbar!\n";
        cout << "*You get struck and stagger backward.*\n";
        cout << "Outcome: You were countered and injured.\n";
    }
    else if (choice == 2) {
        cout << "\nYou swing with your left hand.\n";
        cout << "Your punch lands perfectly and knocks out the attacker!\n";
        cout << "Outcome: Tactical success â€” enemy down.\n";
    }
    else {
        cout << "\nInvalid choice â€” no attack made.\n";
        cout << "The thug stays aggressive.\n";
    }

    cout << "\n=================================================\n";
}

