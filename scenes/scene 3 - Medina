#include <iostream>
#include <unistd.h>
using namespace std;

/* ---------- Typing Effects ---------- */

// WORD-by-word (dialogue)
void typeWords(string text, int delay = 80000) {
    string word = "";
    for (char c : text) {
        if (c == ' ') {
            cout << word << " ";
            cout.flush();
            usleep(delay);
            word = "";
        } else {
            word += c;
        }
    }
    cout << word << endl;
    usleep(delay);
}

// LINE-by-line (actions)
void typeLine(string text, int delay = 200000) {
    cout << text << endl;
    usleep(delay);
}

